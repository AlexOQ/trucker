{
  "name": "ets2-trucker-advisor",
  "version": "0.1.0",
  "description": "Euro Truck Simulator 2 trailer set optimizer",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "vite",
    "build": "tsc",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "export": "tsx scripts/export-data.ts",
    "test": "vitest run",
    "lint": "eslint public/js/",
    "lint:fix": "eslint --fix public/js/",
    "format": "prettier --write public/js/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "kysely": "^0.27.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "playwright": "^1.58.0",
    "prettier": "^3.8.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.1.6",
    "vitest": "^4.0.18"
  }
}
